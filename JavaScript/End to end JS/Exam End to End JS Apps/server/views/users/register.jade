extends ../shared/layout
block main-content
    form(method="post")
        label(for="username") Username *
        input(id="username" class="form-control" type="text" name="username" placeholder="Username", required)
        br
        label(for="password") Password *
        input(id="password" class="form-control" type="password" name="password" placeholder="Password", required)
        br
        label(for="confirm-password") Confirm Password *
        input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password", required)
        br
        br
        h3 Profile data:
        br
        label(for="firstName") Firstname *
        input(id="firstName" class="form-control" type="text" name="firstName" placeholder="Firstname", required)
        br
        label(for="lastName") LastName *
        input(id="lastName" class="form-control" type="text" name="lastName" placeholder="LastName", required)
        br
        label(for="phoneNumber") Phone number
        input(id="phoneNumber" class="form-control" type="text" name="phoneNumber" placeholder="phone number")
        br
        label(for="email") Email *
        input(id="email" class="form-control" type="text" name="email" placeholder="Email", required)
        br
        label Add your Image
        input(type='file', id='picture', name='picture')
        br
        br
        h3 Links to your profiles in:
        br
        label(for="facebook") Facebook
        input(id="facebook" class="form-control" type="text" name="facebook" placeholder="Facebook")
        br
        label(for="twitter") Twitter
        input(id="twitter" class="form-control" type="text" name="twitter" placeholder="Twitter")
        br
        label(for="linkedIn") LinkedIn
        input(id="linkedIn" class="form-control" type="text" name="linkedIn" placeholder="LinkedIn")
        br
        label(for="google") Google+
        input(id="google" class="form-control" type="text" name="google" placeholder="Google+")
        br
        input(type="submit" class="btn btn-lg" value="Register")